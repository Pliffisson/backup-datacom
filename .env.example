# Configurações do Telegram (opcional)
# Para obter o token, converse com @BotFather no Telegram
TELEGRAM_BOT_TOKEN=seu_token_aqui

# Para obter o chat ID:
# 1. Envie uma mensagem para seu bot
# 2. Acesse: https://api.telegram.org/bot<TOKEN>/getUpdates
# 3. Use o valor de "chat": {"id": NUMERO}
TELEGRAM_CHAT_ID=seu_chat_id_aqui

# Configurações gerais
# Quantos dias manter os backups (padrão: 30)
BACKUP_RETENTION_DAYS=30

# Coletar informações detalhadas do sistema (true/false)
COLLECT_SYSTEM_INFO=false

# Timeout para conexões SSH em segundos (padrão: 15)
SSH_TIMEOUT=15

# Configurações de rede (opcional)
# NETWORK_TIMEOUT=30
# MAX_CONCURRENT_BACKUPS=5